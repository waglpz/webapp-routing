{
  "name": "waglpz/webapp-routing",
  "description": "Minimal routing components",
  "license": "MIT",
  "type": "library",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "optimize-autoloader": true,
    "apcu-autoloader": true,
    "discard-changes": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "require": {
    "php": "^8.2",
    "ext-apcu": "*",
    "ext-intl": "*",
    "nikic/fast-route": "^1.3"
  },
  "require-dev": {
    "doctrine/coding-standard": "^9.0",
    "phpstan/phpstan": "^1.10",
    "phpstan/phpstan-deprecation-rules": "^1.1",
    "phpstan/phpstan-doctrine": "^1.1",
    "phpstan/phpstan-phpunit": "^1.1",
    "phpstan/phpstan-strict-rules": "^1.1",
    "phpstan/phpstan-symfony": "^1.1",
    "phpstan/phpstan-webmozart-assert": "^1.1",
    "phpunit/phpunit": "^10.0",
    "roave/security-advisories": "dev-master",
    "squizlabs/php_codesniffer": "^3.7"
  },
  "conflict": {
  },
  "autoload": {
    "psr-4": {
      "Waglpz\\Route\\": "src/"
    },
    "files": ["src/functions.php"]
  },
  "autoload-dev": {
    "psr-4": {
      "Waglpz\\Route\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "waglpz:cs-check": "phpcs -p",
    "waglpz:cs-fix": "phpcbf -p",
    "waglpz:test": "phpunit --colors=always tests",
    "waglpz:analyse": [
      "phpstan analyse --configuration=phpstan.neon examples/ src/ tests/ --level max"
    ],
    "waglpz:check": [
      "@waglpz:cs-check",
      "@waglpz:analyse",
      "@waglpz:test"
    ]
  }
}
